    <s:Rect left="2" top="2" right="2" bottom="2" >
        <s:fill>
            <s:LinearGradient>
                <s:GradientEntry color="0x9A9A9A" 
                                 alpha="1" />
                <s:GradientEntry color="0xBDBDBD" 
                                 alpha="1" />
            </s:LinearGradient>
        </s:fill>
    </s:Rect>
    <s:Rect left="2" right="2" top="2" bottom="2" >
        <s:fill>
            <s:LinearGradient>
                <s:GradientEntry color="0x000000" ratio="0"
                                 alpha="1" />
