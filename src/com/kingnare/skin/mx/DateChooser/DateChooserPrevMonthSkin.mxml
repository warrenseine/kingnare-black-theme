<!--- The Spark skin class for the previous month arrow of an MX DateChooser component. 

      @see mx.controls.DateChooser
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    minWidth="21" minHeight="9" alpha.disabled="0.5">

    <fx:Script>  
        /* Define the skin elements that should not be colorized. 
        For button, the graphics are colorized but the arrow is not. */
        static private const exclusions:Array = ["arrow", "arrowHighlight"];
        /**
         * @private
         */
        override public function get colorizeExclusions():Array {return exclusions;}

        /* Define the symbol fill items that should be colored by the "symbolColor" style. */
        static private const symbols:Array = ["arrowFill"];//["arrowFill1", "arrowFill2", "arrowFill3"];
        /**
         * @private
         */
        override public function get symbolItems():Array {return symbols};
        
        /**
         * @private
         */
        override protected function initializationComplete():void
        {
            useChromeColor = true;
            super.initializationComplete();
        }
    </fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    <!-- highlight circle (over/down states) -->
    <!--- @private -->
    <s:Ellipse left="-1" right="5" top="-4" bottom="-3">
        <s:fill>
            <s:SolidColor color="0" alpha="0" alpha.over=".12" alpha.down=".22" />
        </s:fill>
    </s:Ellipse>
    
    <!--- @private -->
    <s:Path id="arrow" left="4" verticalCenter="-1" data="M 0 4 L 1 4 L 1 3 L 2 3 L 2 2 L 3 2 L 3 1 L 4 1 L 4 0 L 5 0 L 5 9 L 4 9 L 4 8 L 3 8 L 3 7 L 2 7 L 2 6 L 1 6 L 1 5 L 0 5 L 0 4 Z">
        <s:fill>
            <s:SolidColor id="arrowFill" color="0" alpha=".6" alpha.over="1" alpha.disabled=".4" />
        </s:fill>
    </s:Path>
    <!-- Highlight -->
    <!--- @private -->
    <s:Path id="arrowHighlight" left="4" verticalCenter="2" data="M 0 5 L 1 5 L 1 6 L 2 6 L 2 7 L 3 7 L 3 8 L 4 8 L 4 9 L 5 9 L 5 10">
        <s:fill>
            <s:SolidColor color="0x000000"/>
        </s:fill>
    </s:Path>
    
</s:SparkSkin>
